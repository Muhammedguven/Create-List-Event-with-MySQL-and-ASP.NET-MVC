@model IEnumerable<Event.Models.EventData>

@{
    ViewBag.Title = "EventList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.eventID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eventTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eventStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eventDurationInMin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.eventID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eventStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eventDurationInMin)
            </td>
        </tr>

    }
    <tr>
        <th>
            <a class="btn btn-primary" onclick="location.href='@Url.Action("Main", "Home")'">Return to Main Menu</a>
        </th>
    </tr>
</table>
